#!/usr/bin/env node

const ChinoScript = require('../dist/src/index.js')
const parser = require('../dist/src/parser.js')
const fs = require('fs')
const util = require('util')

if (process.argv[2] == undefined) {
  console.log('usage: chino FILE')
} else {
  const code = fs.readFileSync(process.argv[2]).toString()
  let ast
  try {
    ChinoScript.evaluate(code)

  } catch (e) {
    if (e instanceof parser.parser.SyntaxError) {
      const l = e.location.start
      let msg = e.message
      const line = code.split(/\r\n|\r|\n/)
      let space = '';
      for (var i = 0; i < l.column - 1; i++) { space += ' ' }
      msg += `
${line[l.line - 1]}
${space + '^'}`

      console.log(msg);
    } else {
      throw e
    }
  }
}

